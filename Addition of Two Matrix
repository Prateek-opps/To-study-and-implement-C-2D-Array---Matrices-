#include <iostream>
using namespace std;
int main() {
    int A[3][3], B[3][3], Sum[3][3];
    cout << "Enter number for A:\n";
    for (int i=0; i<3; i++){
        for (int j=0; j<3; j++){
            cout<<"A["<<i<<"]["<<j<<"]:";
            cin>>A[i][j];
        }
    }
    cout<<"\nEnter number for B:\n";
    for(int i=0 ; i<3; i++) {
        for(int j=0 ; j<3 ; j++) {
            cout<<"B["<<i<<"]["<<j<<"]:";
            cin>>B[i][j];
        }
    }
    for(int i=0 ; i<3 ; i++){
        for(int j=0 ; j<3 ; j++) {
            Sum[i][j]=A[i][j]+B[i][j];
        }
    }
    cout<<"Sum of Matrix A and B:\n";
    for (int i=0;i<3;i++){
        for (int j=0 ; j<3 ; j++){
            cout<<Sum[i][j]<<"\t";
        }
        cout<<endl;
    }

    return 0;
}
/*Output:-
Enter number for A:
